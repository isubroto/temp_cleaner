<Window x:Class="TempCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TempCleaner"
        mc:Ignorable="d"
        Title="Temp Cleaner" Height="550" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        >
    <Border CornerRadius="40" 
            Background="#1e2939" 
            BorderBrush="#101828" 
            BorderThickness="2" 
            Padding="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Temp Clean" 
                           Foreground="White" 
                           FontSize="20" 
                           FontFamily="Montserrat" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="20 0 0 0"/>
                <Button x:Name="mibimize" 
                        Content="-" 
                        Width="30" 
                        Height="30" 
                        Grid.Column="1"  
                        Foreground="White"
                        FontSize="16"
                        Click="mibimize_Click" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        FontWeight="Bold" 
                        FontFamily="Arial"
                        >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#615fff"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#6d4cce"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="30" 
                                    Height="30" 
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}"
                                    >
                                <ContentPresenter 
                                    Margin="-10"
                                    Content="-"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="Close" 
                        Content="x" 
                        Width="30" 
                        Height="30" 
                        Grid.Column="2"  
                        Foreground="White"
                        FontSize="16"
                        Click="Close_Click" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        FontWeight="Bold" 
                        FontFamily="Arial"
                        >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#da34ae"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff34ae"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="30" 
                Height="30" 
                CornerRadius="15"
                Background="{TemplateBinding Background}"
                >
                                <ContentPresenter
                                    Margin="0 -20"
                                    Content="x"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <StackPanel Grid.Row="1" Width="550">
                <Image Source="pack://application:,,,/Images/Designer.png" Width="150" />
                <TextBlock Text="Tepm Cleaner" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Foreground="White" FontWeight="Bold" Margin="0 10 0 0"/>
                <ProgressBar x:Name="Progress"  
                            Height="40"  
                            Margin="20 10"  
                            Value="0"  
                            Width="400"    
                            Background="#1e2939"  
                            BorderBrush="#101828"  
                            BorderThickness="2"  
                            Padding="5"  
                            Maximum="400"  
                            Minimum="0">  
                   <ProgressBar.Template>  
                       <ControlTemplate TargetType="ProgressBar">  
                           <Grid>  
                               <Border Background="{TemplateBinding Background}"  
                                       CornerRadius="20"  
                                       BorderBrush="{TemplateBinding BorderBrush}"  
                                       BorderThickness="{TemplateBinding BorderThickness}"/>  
                               <Border CornerRadius="20"  
                                      HorizontalAlignment="Left"  
                                      Width="{TemplateBinding Value}"  
                                      Margin="2">  
                                  <Border.Triggers>
                                      <EventTrigger RoutedEvent="ProgressBar.ValueChanged">
                                          <BeginStoryboard>
                                              <Storyboard>
                                                  <DoubleAnimation Storyboard.TargetProperty="Width" 
                                                                   To="{TemplateBinding Value}" 
                                                                   Duration="0:0:0.5" />
                                              </Storyboard>
                                          </BeginStoryboard>
                                      </EventTrigger>
                                  </Border.Triggers>
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#8a0194" Offset="0.0"/>
                                            <GradientStop Color="#a800b7" Offset="0.5"/>
                                            <GradientStop Color="#e12afb" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>  
                           </Grid>  
                       </ControlTemplate>  
                   </ProgressBar.Template>  
                </ProgressBar>
                <TextBlock
                    x:Name="Percent"
                    Text="99"
                    FontSize="18"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Margin="0 -44 0 0"
                    Visibility="Hidden"
                    />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button 
                       x:Name="Check" 
                       Content="Check" 
                       HorizontalAlignment="Center"
                       Padding="40 20"
                       Cursor="Hand"
                       Grid.Column="0" 
                        Foreground="White" 
                        FontSize="20" 
                        Width="110" 
                        Height="50"
                        Click="Check_Click">
                       <Button.Template>
                           <ControlTemplate TargetType="Button">
                               <Grid>
                                   <Border 
                                       CornerRadius="10"
                                       BorderBrush="#372aac"
                                       BorderThickness="2"
                                       Padding="{TemplateBinding Padding}">
                                       <Border.Background>
                                           <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#372aac" Offset="0.0"/>
                                                <GradientStop Color="#4f39f6" Offset="0.5"/>
                                                <GradientStop Color="#7c86ff" Offset="1.0"/>
                                           </LinearGradientBrush>
                                       </Border.Background>
                                   </Border>
                                   <ContentPresenter 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Content="{TemplateBinding Content}"
                                       />
                               </Grid>
                           </ControlTemplate>
                       </Button.Template>
                    </Button>
                    <Button 
                       x:Name="Clear" 
                       Content="Clear" 
                       HorizontalAlignment="Center"
                       Padding="20 10"
                       Grid.Column="1"
                       Cursor="Hand"
                       Foreground="White" 
                       FontSize="20" 
                       Width="110" 
                       Height="50"
                       Click="Clear_Click"
                       IsEnabled="False">
                       <Button.Template>
                           <ControlTemplate TargetType="Button">
                               <Grid>
                                   <Border 
                                       CornerRadius="10"
                                       BorderBrush="#005f5a"
                                       BorderThickness="2"
                                       Padding="{TemplateBinding Padding}">
                                       <Border.Background>
                                           <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                               <GradientStop Color="#005f5a" Offset="0.0"/>
                                               <GradientStop Color="#009689" Offset="0.5"/>
                                               <GradientStop Color="#00d5be" Offset="1.0"/>
                                           </LinearGradientBrush>
                                       </Border.Background>
                                   </Border>
                                   <ContentPresenter 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Content="{TemplateBinding Content}"/>
                               </Grid>
                           </ControlTemplate>
                       </Button.Template>
                    </Button>
                    
                </Grid>
                <RichTextBox x:Name="Logs"  
                            Margin="20 10"  
                            VerticalScrollBarVisibility="Auto"  
                            IsReadOnly="True"  
                            Background="Transparent"  
                            Height="170"  
                            Foreground="White">  
                   <RichTextBox.Resources>  
                       <Style TargetType="{x:Type ScrollBar}">  
                           <Setter Property="Template">  
                               <Setter.Value>  
                                   <ControlTemplate TargetType="{x:Type ScrollBar}">  
                                       <Grid>  
                                           <Rectangle Fill="#1e2939" />  
                                           <Track Name="PART_Track"  
                                                  IsDirectionReversed="False">  
                                               <Track.DecreaseRepeatButton>  
                                                   <RepeatButton Style="{x:Null}" />  
                                               </Track.DecreaseRepeatButton>  
                                               <Track.Thumb>  
                                                   <Thumb Background="#615fff"  
                                                          BorderBrush="#372aac"  
                                                          BorderThickness="1"  
                                                          />  
                                               </Track.Thumb>  
                                               <Track.IncreaseRepeatButton>  
                                                   <RepeatButton Style="{x:Null}" />  
                                               </Track.IncreaseRepeatButton>  
                                           </Track>  
                                       </Grid>  
                                   </ControlTemplate>  
                               </Setter.Value>  
                           </Setter>  
                       </Style>  
                   </RichTextBox.Resources>  
                </RichTextBox>
            </StackPanel>
        </Grid>
    </Border>
</Window>
