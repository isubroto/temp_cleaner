<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Images\Designer.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Images\" />
    <Content Include="Images\Designer.ico" CopyToOutputDirectory="PreserveNewest" />
<Content Include="Images\Designer.png" CopyToOutputDirectory="PreserveNewest" />
    <Resource Include="Images\Designer.ico" /> <!-- Ensures icon is embedded for Win32 resource -->
  </ItemGroup>

</Project>
