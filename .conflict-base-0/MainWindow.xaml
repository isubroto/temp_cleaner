<Window x:Class="TempCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TempCleaner"
        mc:Ignorable="d"
        Title="Temp Cleaner" Height="550" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        >
    <Border CornerRadius="40" 
            Background="#1e2939" 
            BorderBrush="#101828" 
            BorderThickness="2" 
            Padding="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Temp Clean" 
                           Foreground="White" 
                           FontSize="20" 
                           FontFamily="Montserrat" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="20 0 0 0"/>
                <Button x:Name="mibimize" 
                        Content="-" 
                        Width="30" 
                        Height="30" 
                        Grid.Column="1"  
                        Foreground="White"
                        FontSize="16"
                        Click="mibimize_Click" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        FontWeight="Bold" 
                        FontFamily="Arial"
                        >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#615fff"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#6d4cce"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="30" 
                                    Height="30" 
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}"
                                    >
                                <ContentPresenter 
                                    Margin="-10"
                                    Content="-"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="Close" 
                        Content="x" 
                        Width="30" 
                        Height="30" 
                        Grid.Column="2"  
                        Foreground="White"
                        FontSize="16"
                        Click="Close_Click" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        FontWeight="Bold" 
                        FontFamily="Arial"
                        >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#da34ae"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff34ae"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="30" 
                Height="30" 
                CornerRadius="15"
                Background="{TemplateBinding Background}"
                >
                                <ContentPresenter
                                    Margin="0 -20"
                                    Content="x"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <StackPanel Grid.Row="1" Width="500">
                <Image Source="/Images/Designer.png" Width="150" />
                <TextBlock Text="Tepm Cleaner" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Foreground="White" FontWeight="Bold" Margin="0 10 0 0"/>
                <ProgressBar x:Name="Progress"  
                            Height="40"  
                            Margin="20 10"  
                            Value="300"  
                            Width="400"
                            Foreground="#4CAF50"  
                            Background="#1e2939"  
                            BorderBrush="#101828"  
                            BorderThickness="2" 
                            Padding="5"
                            Maximum="400"
                            Minimum="0"
                             >  
                   <ProgressBar.Template>  
                       <ControlTemplate TargetType="ProgressBar">  
                           <Grid>  
                               <Border Background="{TemplateBinding Background}"  
                                       CornerRadius="20"  
                                       BorderBrush="{TemplateBinding BorderBrush}"  
                                       BorderThickness="{TemplateBinding BorderThickness}"/>  
                               <Border Background="{TemplateBinding Foreground}"  
                                       CornerRadius="20"  
                                       HorizontalAlignment="Left"  
                                       Width="{TemplateBinding Value}"  
                                       Margin="2"/>  
                           </Grid>  
                       </ControlTemplate>  
                   </ProgressBar.Template>  
                </ProgressBar>
                <Button 
                    x:Name="Check" 
                    Content="Check" 
                    HorizontalAlignment="Left"
                    ></Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
